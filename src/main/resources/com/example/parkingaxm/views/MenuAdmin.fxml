<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.parkingaxm.controllers.MenuController"
            styleClass="screen-root">

    <center>
        <VBox alignment="CENTER" spacing="16" maxWidth="400"
              BorderPane.alignment="CENTER"
              styleClass="card">

            <Label text="Panel Administrador" styleClass="app-title"/>

            <Label text="Gestión completa del parqueadero"
                   styleClass="section-title"/>

            <VBox spacing="8" prefWidth="Infinity">
                <Button text="Registrar Vehículo"
                        onAction="#onRegistrarVehiculo"
                        maxWidth="Infinity"
                        styleClass="primary-button"/>

                <Button text="Listar Vehículos"
                        onAction="#onListarVehiculos"
                        maxWidth="Infinity"/>

                <Button text="Cobro"
                        onAction="#onCobro"
                        maxWidth="Infinity"/>

                <Button text="Estadísticas"
                        onAction="#onEstadisticas"
                        maxWidth="Infinity"/>

                <Button text="Gestión de Usuarios"
                        onAction="#onCrearUsuario"
                        maxWidth="Infinity"/>
            </VBox>

            <Button text="Cerrar sesión"
                    onAction="#onSalir"
                    maxWidth="Infinity"
                    styleClass="danger-button"/>

        </VBox>
    </center>

</BorderPane>
