<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.parkingaxm.controllers.RegistroController"
           stylesheets="@../css/estilos.css"
           styleClass="login-background">

    <!-- Capa de efectos del fondo -->
    <Pane styleClass="background-effects"/>

    <!-- Contenedor general -->
    <VBox alignment="CENTER" spacing="25">

        <!-- Tarjeta tipo Glass -->
        <VBox alignment="CENTER" spacing="18" maxWidth="500" styleClass="glass-card">

            <Label text="Registrar Vehículo"
                   styleClass="login-title"
                   style="-fx-font-size: 32px;" />

            <!-- Inputs -->
            <VBox alignment="CENTER" spacing="12" maxWidth="280">

                <TextField fx:id="txtPlaca"
                           promptText="Placa (ej: ABC123)"
                           styleClass="login-input"/>

                <ComboBox fx:id="cmbTipoVehiculo"
                          promptText="Tipo de vehículo"
                          styleClass="login-input"/>
            </VBox>


            <!-- Botones -->
            <HBox alignment="CENTER" spacing="15">

                <Button text="Registrar entrada"
                        onAction="#onRegistrarEntrada"
                        styleClass="login-button"
                        style="-fx-font-size: 15px;" />

                <Button text="Volver"
                        onAction="#onVolverAlMenu"
                        style="
                            -fx-background-color: rgba(255,255,255,0.18);
                            -fx-text-fill: white;
                            -fx-padding: 10 20;
                            -fx-background-radius: 12;
                            -fx-border-color: rgba(255,255,255,0.3);
                            -fx-border-radius: 12;
                        " />
            </HBox>

        </VBox>

    </VBox>

</StackPane>
