<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="12"
      alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.parkingaxm.controllers.RegistroController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Registro de entrada de vehículos"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="Ingresa los datos del vehículo:"
           style="-fx-font-size: 13px;"/>

    <TextField fx:id="txtPlaca"
               promptText="Placa (ej: ABC123)"/>

    <ComboBox fx:id="cmbTipoVehiculo"
              promptText="Tipo de vehículo (CARRO / MOTO)"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Registrar entrada"
                onAction="#onRegistrarEntrada"/>
        <Button text="Volver al menú"
                onAction="#onVolverAlMenu"/>
    </HBox>

</VBox>
