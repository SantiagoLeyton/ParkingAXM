              styleClass="card">

            <Label text="Cobro de Parqueadero" styleClass="app-title"/>

            <VBox spacing="10" prefWidth="Infinity">
                <TextField fx:id="txtPlaca"
                           promptText="Placa del vehÃ­culo (ej: ABC123)"/>

                <Button text="Buscar"
