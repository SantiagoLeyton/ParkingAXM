<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.parkingaxm.controllers.CobroController"
      alignment="CENTER"
      spacing="20">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Cobro de Parqueadero"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Placa:"/>
        <TextField fx:id="txtPlaca" promptText="Ingrese la placa" prefWidth="180"/>
    </HBox>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Calcular y Cobrar" onAction="#onCalcularCobro"/>
        <Button text="Volver al menÃº" onAction="#onVolverMenu"/>
    </HBox>

    <VBox alignment="CENTER" spacing="5">
        <Label fx:id="lblHoras" text="Horas:"/>
        <Label fx:id="lblTotal" text="Total a pagar:"/>
    </VBox>

</VBox>
