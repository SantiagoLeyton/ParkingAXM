<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.parkingaxm.controllers.MenuController"
            styleClass="screen-root">

    <center>
        <VBox alignment="CENTER" spacing="16" maxWidth="400"
              BorderPane.alignment="CENTER"
              styleClass="card">

            <Label text="Panel Operario" styleClass="app-title"/>

            <Label text="Operaciones diarias de parqueadero"
                   styleClass="section-title"/>

            <VBox spacing="8" prefWidth="Infinity">
                <Button text="Registrar Vehículo"
                        fx:id="btnRegistrar"
                        onAction="#onRegistrarOperario"
                        maxWidth="Infinity"
                        styleClass="primary-button"/>

                <Button text="Listar Vehículos"
                        fx:id="btnListar"
                        onAction="#onListarOperario"
                        maxWidth="Infinity"/>

                <Button text="Cobro"
                        fx:id="btnCobro"
                        onAction="#onCobroOperario"
                        maxWidth="Infinity"/>
            </VBox>

            <Button text="Cerrar sesión"
                    fx:id="btnSalir"
                    onAction="#onSalirOperario"
                    maxWidth="Infinity"
                    styleClass="danger-button"/>

        </VBox>
    </center>

</BorderPane>
