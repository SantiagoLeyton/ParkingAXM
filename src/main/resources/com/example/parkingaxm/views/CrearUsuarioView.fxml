<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.parkingaxm.controllers.UsuarioCrudController"
           stylesheets="@../css/estilos.css"
           styleClass="login-background">

    <!-- Fondo con efectos -->
    <Pane styleClass="background-effects"/>

    <!-- Contenedor principal -->
    <VBox alignment="TOP_CENTER" spacing="25" maxWidth="1100">

        <!-- Tarjeta estilo glass -->
        <VBox alignment="TOP_CENTER" spacing="20" styleClass="glass-card" maxWidth="1100">

            <!-- Título -->
            <Label text="Gestión de Usuarios"
                   style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

            <!-- Tabla -->
            <TableView fx:id="tablaUsuarios" prefHeight="300" maxWidth="900">
                <columns>
                    <TableColumn fx:id="colUsername" text="Usuario" prefWidth="300" />
                    <TableColumn fx:id="colRol" text="Rol" prefWidth="150" />
                </columns>
            </TableView>

            <!-- Formulario -->
            <GridPane hgap="15" vgap="15" alignment="CENTER" maxWidth="450">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Usuario:" GridPane.rowIndex="0"/>
                <TextField fx:id="txtUsername"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"
                           styleClass="login-input"/>

                <Label text="Contraseña:" GridPane.rowIndex="1"/>
                <PasswordField fx:id="txtPassword"
                               GridPane.rowIndex="1" GridPane.columnIndex="1"
                               styleClass="login-input"/>
            </GridPane>

            <!-- Botones -->
            <HBox spacing="15" alignment="CENTER">

                <Button text="Crear"
                        fx:id="btnCrear"
                        onAction="#onCrear"
                        styleClass="login-button"/>

                <Button text="Actualizar"
                        fx:id="btnActualizar"
                        onAction="#onActualizar"
                        styleClass="login-button"/>

                <Button text="Cambiar contraseña"
                        fx:id="btnCambiarPassword"
                        onAction="#onCambiarPassword"
                        styleClass="login-button"/>

                <Button text="Eliminar"
                        fx:id="btnEliminar"
                        onAction="#onEliminar"
                        styleClass="login-button"/>

                <Button text="Volver"
                        fx:id="btnVolver"
                        onAction="#onVolver"
                        style="
                            -fx-background-color: rgba(255,255,255,0.18);
                            -fx-text-fill: white;
                            -fx-padding: 10 20;
                            -fx-background-radius: 12;
                            -fx-border-color: rgba(255,255,255,0.3);
                            -fx-border-radius: 12;
                        "/>
            </HBox>

        </VBox>
    </VBox>

</StackPane>
