<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.parkingaxm.controllers.ListarController"
           stylesheets="@../css/estilos.css"
           styleClass="menu-background">

    <!-- Efectos de fondo -->
    <Pane styleClass="background-effects"/>

    <VBox alignment="CENTER" spacing="25">

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Título -->
        <Label text="Vehículos Registrados"
               styleClass="menu-title"/>

        <!-- Tarjeta Glass -->
        <VBox alignment="CENTER" spacing="15" styleClass="glass-card" maxWidth="900" maxHeight="600">

            <TableView fx:id="tablaVehiculos" prefHeight="450" prefWidth="800">

                <columns>
                    <TableColumn text="Placa" fx:id="colPlaca" prefWidth="120" />
                    <TableColumn text="Tipo" fx:id="colTipo" prefWidth="100" />
                    <TableColumn text="Hora Entrada" fx:id="colEntrada" prefWidth="200" />
                    <TableColumn text="Hora Salida" fx:id="colSalida" prefWidth="200" />
                    <TableColumn text="Total" fx:id="colTotal" prefWidth="150" />
                </columns>

            </TableView>

        </VBox>

        <!-- Botón volver -->
        <Button text="Volver al menú"
                onAction="#onVolver"
                styleClass="login-button"
                style="-fx-font-size: 15px;"/>

    </VBox>

</StackPane>
